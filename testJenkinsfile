pipeline{
      agent any

    stages{
        stage('install dependencies'){
            agent {docker {image 'node:18' args '-e HOME=/tmp'}
            
            } //since node is not installed in jenkins, we are using docker with node on it
            steps{
                
                //sh 'npm cache clean"'
               // sh 'npm config set cache ./.npm-cache --global'
               sh 'npm config set cache ./.npm-cache --global'
               sh 'mkdir -p .npm-cache'
                sh 'npm install'
            }
        }
    }

}