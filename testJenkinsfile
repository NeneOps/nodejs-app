pipeline{
       agent {docker {image 'node:18' 
            args '-u root:sudo'}} //since node is not installed in jenkins, we are using docker with node on it

    stages{
        stage('install dependencies'){
           
            steps{
                sh 'npm install'
            }
        }
        stage('package'){
            steps{
                sh 'rm -rf *.tgz || echo ""' // remove all old tgz files before we package the new one but if there is nothing proceed
                sh 'npm pack'
            }
        }

        stage('upload artifacts'){
            steps{
                sh 'curl -uadmin:AP7iKibFPukTLYzjaqQWMbvj12T -T \
                *.tgz \
                "http://35.175.178.184:8081/artifactory/utc-nodejs/utc-app${BUILD_ID}.tgz"'
            }
        }
    }

}