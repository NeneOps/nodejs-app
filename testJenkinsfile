pipeline{
      agent any

    stages{
        stage('install dependencies'){
            agent {docker {image 'node:14'}} //since node is not installed in jenkins, we are using docker with node on it
            steps{
                sh 'cat /etc/os-release'
                sh 'exit'
                sh 'apt update'
                sh 'apt install sudo -y'
                sh 'sudo chown -R 995:993 "/.npm"'
                sh 'npm install'
            }
        }
    }

}